@{
    var searchPaths = new List<String>();
    searchPaths.Add("/jobs");
    searchPaths.Add("/evaluations");
    searchPaths.Add("/allocations");
    searchPaths.Add("/clients");
    searchPaths.Add("/servers");
}

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand" href="/"><img src="~/images/nomad.png" alt="Nomad" height="20"></a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "dashboard" ? "active" : "")"><a href="/">Dashboard</a></li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "job" ? "active" : "")"><a href="/jobs">Jobs</a></li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "evaluation" ? "active" : "")"><a href="/evaluations">Evaluations</a></li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "allocation" ? "active" : "")"><a href="/allocations">Allocations</a></li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "client" ? "active" : "")"><a href="/clients">Clients</a></li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "server" ? "active" : "")"><a href="/servers">Servers</a></li>
            </ul>

            @if (searchPaths.Contains(Context.Request.Path))
            {
                <form class="navbar-form navbar-right search" method="get">
                    <div class="form-group">
                        <input type="text" class="form-control" name="search" placeholder="Search">
                    </div>

                    <button type="submit" class="btn btn-default">&#8981;</button>
                </form>
            }
        </div>
    </div>
</nav>

@model Nomad.Models.Agent

<div class="row spacer">
    <div class="col-md-4">
        <h2>Server Properties</h2>
        <ul class="list-group">
            <li class="list-group-item"><strong>Name</strong>: @Model.Member.Name</li>
            <li class="list-group-item"><strong>Address</strong>: @Model.Member.Addr</li>
            <li class="list-group-item"><strong>Port</strong>: @Model.Member.Port</li>
            @foreach (var server in Model.Operator.Servers)
            {
                @if (server.Node == Model.Member.Name)
                {
                    <li class="list-group-item"><strong>Voter</strong>: @server.Voter</li>
                    <li class="list-group-item"><strong>Leader</strong>: @server.Leader</li>
                }
            }
            <li class="list-group-item"><strong>Status</strong>: @Model.Member.Status</li>
        </ul>
    </div>

    <div class="col-md-4">
        <h2>Configuration</h2>
        <ul class="list-group">
            <li class="list-group-item"><strong>Region</strong>: @Model.Config.Region</li>
            <li class="list-group-item"><strong>Datacenter</strong>: @Model.Config.Datacenter</li>
            <li class="list-group-item"><strong>Bind Address</strong>: @Model.Config.BindAddr</li>
            <li class="list-group-item"><strong>HTTP Address</strong>: @Model.Config.AdvertiseAddrs.HTTP</li>
            <li class="list-group-item"><strong>RPC Address</strong>: @Model.Config.AdvertiseAddrs.RPC</li>
            <li class="list-group-item"><strong>Serf Address</strong>: @Model.Config.AdvertiseAddrs.Serf</li>
            <li class="list-group-item"><strong>Data Directory</strong>: @Model.Config.DataDir</li>
            <li class="list-group-item"><strong>Log Level</strong>: @Model.Config.LogLevel</li>
            <li class="list-group-item"><strong>Nomad Version</strong>: @Model.Config.Version</li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Raw JSON <a href="#raw" data-toggle="collapse">&darr;</a></h2>
        <div id="raw" class="panel-body panel-collapse collapse">
            <pre><code class="json">@ViewBag.Json</code></pre>
        </div>
    </div>
</div>

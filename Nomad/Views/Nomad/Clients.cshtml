@model IEnumerable<Nomad.Models.Node>

<h2>Clients</h2>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Datacenter</th>
                    <th>Drain</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var node in Model)
                {
                    <tr>
                        <td><a href="/client?id=@node.ID">@node.ID</a></td>
                        <td>@node.Name</td>
                        <td>@node.Datacenter</td>
                        <td>@node.Drain</td>
                        <td>@node.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
